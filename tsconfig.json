{
  "compilerOptions": {
    "target": "ES2017",
    "module": "CommonJS",
    "outDir": "./build",
    "removeComments": true,
    "strict": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@startup/*": [
        "./src/startup/*"
      ],
      "@routes/*": [
        "./src/routes/*"
      ],
      "@controller/*": [
        "./src/controller/*"
      ],
      "@middleware/*": [
        "./src/middleware/*"
      ],
      "@services/*": [
        "./src/services/*"
      ],
      "@app-types/*": [
        "./src/types-and-schemas/*"
      ]
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}